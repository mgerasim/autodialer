<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Дата вызова</th>
      <th>Время вызова</th>
      <th>Телефон</th>
      <th>Статус</th>
    </tr>
  </thead>

  <tbody>
    <% @cdr.each do |cdr| %>
      <tr>
        <td><%= cdr.shown_date_created_at %></td>
        <td><%= cdr.shown_time_created_at %></td>
        <td><%= cdr.userfield %></td>
        <td><%= cdr.disposition %></td>
      </tr>
    <% end %>
  </tbody>
</table>

