<% provide(:title, 'Задания') %>

<h1>Задания</h1>

<%= link_to 'Добавить', new_task_path, class: "btn btn-primary" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Дата создания</th>
      <th>Наименование</th>
      <th>Количество</th>
      <th>Обработано</th>
      <th>Статус</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.created_at %></td>
        <td><%= task.name %></td>
        <td><%= task.contacts.count %></td>
        <td><%= task.contacts.where.not(status: "INSERTED").count %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Просмотр', task %></td>
        <td><%= link_to 'Редактировать', edit_task_path(task) %></td>
        <td><%= link_to 'Удалить', task, method: :delete, data: { confirm: 'Действительно удалить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_task_path, class: "btn btn-primary" %>
