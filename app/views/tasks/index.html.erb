<% provide(:title, 'Задания') %>

<p id="notice"><%= notice %></p>

<h1>Задания</h1>

<table>
  <thead>
    <tr>
      <th>Наименование</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= link_to 'Просмотр', task %></td>
        <td><%= link_to 'Редактировать', edit_task_path(task) %></td>
        <td><%= link_to 'Удалить', task, method: :delete, data: { confirm: 'Действительно удалить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_task_path %>
