<% provide(:title, @task.name) %>
<%= link_to 'Назад', tasks_path, class: 'btn btn-primary' %>
<p>
  <strong>Наименование:</strong>
  <%= @task.name %>
</p>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Номер</th>
      <th>Статус</th>
    </tr>
  </thead>
  <tbody>
    
    <% @task.contacts.each do |contact| %>
      <tr>
         <td><%= contact.phone %></td>
         <td><%= contact.status %></td>
      </tr>
   <% end %>

  </tbody>
</table>

<%= link_to 'Назад', tasks_path, class: 'btn btn-primary' %>
