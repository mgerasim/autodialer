<p id="notice"><%= notice %></p>

<h1>Конфигурация</h1>

<table>
  <thead>
    <tr>
      <th>Лимит исходящих</th>
      <th>Каналы исходящих</th>
      <th>Каталог исходящих</th>
      <th>Очередь исходящих</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.callcount %></td>
        <td><%= setting.sipnames %></td>
        <td><%= setting.outgoing %></td>
        <td><%= setting.currentcount %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if (Setting.count == 0) %>
<%= link_to 'New Setting', new_setting_path %>
<% end %>