<% provide(:title, "Авторизация") %>
<h1>Авторизация</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label "Пароль доступа" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Авторизация", class: "btn btn-primary" %>
    <% end %>

   
  </div>
</div>
