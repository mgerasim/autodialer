<div class="column col-8 col-mx-auto bg-gray">

  <% flash.each do |message_type, message| %>
    <%= content_tag(:div, message, class: "toast toast-success") %>
  <% end %>

  <div class="text-center">
    <h1>Статистика звонков</h1>
  </div>

  <table class="table table-bordered">
  <thead>
    <tr>
      <th>Телефон</th>
      <th>Статус дозвона</th>
      <th>Попытка дозвона</th>
      <th>Принято</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.phone %></td>
        <td><%= lead.dialer_status %></td>
        <td><%= lead.dialer_attempt %></td>
        <td><%= lead.is_offer_accepted %></td>

        <td><%= link_to 'Удалить', lead, method: :delete, data: { confirm: 'Подтвердить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
