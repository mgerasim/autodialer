  <div class="field">
    <%= form.label "Поддержка повторного вызова по неотвеченным номерам с указанием интервала и количество попыток в настройках приложения:", class: "form-label"  %>
    <%= form.check_box :is_attempt_supported, id: :config_is_attempt_supported %>
  </div>

  <div class="field">
    <%= form.label "Поддержка отображения откликов: ", class: "form-label"  %>
    <%= form.check_box :is_answer_supported, id: :config_is_answer_supported %>
  </div>
