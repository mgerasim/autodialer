<% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "toast toast-success") %>
<% end %>

<%= form_with(model: config, local: true) do |form| %>
  <% if config.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(config.errors.count, "error") %> prohibited this config from being saved:</h2>

      <ul>
      <% config.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Пароль приложения:", class: "form-label" %>
    <%= form.text_field :password, id: :config_password, class: "form-input" %>
  </div>

  <div class="field">
    <%= form.label "Удалять исходящие номера после вызова:", class: "form-label" %>
    <%= form.check_box :is_outgoing_deleted, id: :config_is_outgoing_deleted %>
  </div>

  <div class="field">
    <%= form.label "Интеграция Google:", class: "form-label"  %>
    <%= form.check_box :is_google_integrated, id: :config_is_google_integrated %>
  </div>


  <div class="field">
    <%= form.label "Контекст выполнения вызова по умолчанию: ", class: "form-label" %>
    <%= form.text_field :default_trank_context, id: :config_default_trank_context, class: "form-input" %>  
  </div>

  <div class="field">
    <%= form.label "Отображать контекст в редактировании транка:", class: "form-label" %>
    <%= form.check_box :is_trank_context_showed, id: :config_is_trank_context_showed %>
  </div>

