<div class="column col-6 col-mx-auto bg-gray">
	
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "toast toast-error") %>
      <% end %>
    


<% provide(:title, "Авторизация в личный кабинет") %>

<div class="text-center">
<h1>Авторизация в личный кабинет</h1>
</div>




    <%= form_for(:cabinet, url: cabinet_in_path) do |f| %>

      <div class="form-group">
        <%= f.label "Сотрудник:", class: "form-label" %>
        <%= collection_select(:cabinet, :employee, Employee.all, :id, :name, optoins = {}, html_options = { :class => 'form-input' }) %>
      </div>

      <div class="form-group">
        <%= f.label "Пароль доступа:", class: "form-label" %>
        <%= f.password_field :password, class: 'form-input' %>
        <div class="mt-2 text-center">
          <%= f.submit "Вход", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>

   

</div>
