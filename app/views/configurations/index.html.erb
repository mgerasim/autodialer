<p id="notice"><%= notice %></p>

<h1>Configurations</h1>

<table>
  <thead>
    <tr>
      <th>Password encrypted</th>
      <th>Is outgoing deleted</th>
      <th>Is outgoing table showed</th>
      <th>Is google integrated</th>
      <th>Is attempt supported</th>
      <th>Is answer supported</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @configurations.each do |configuration| %>
      <tr>
        <td><%= configuration.password_encrypted %></td>
        <td><%= configuration.is_outgoing_deleted %></td>
        <td><%= configuration.is_outgoing_table_showed %></td>
        <td><%= configuration.is_google_integrated %></td>
        <td><%= configuration.is_attempt_supported %></td>
        <td><%= configuration.is_answer_supported %></td>
        <td><%= link_to 'Show', configuration %></td>
        <td><%= link_to 'Edit', edit_configuration_path(configuration) %></td>
        <td><%= link_to 'Destroy', configuration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

